{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2015",
        "moduleResolution": "node",
        "traceResolution": false,
        "allowJs": false,
        "esModuleInterop": true,
        "declaration": false,
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": false,
        "sourceMap": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
        ],
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}